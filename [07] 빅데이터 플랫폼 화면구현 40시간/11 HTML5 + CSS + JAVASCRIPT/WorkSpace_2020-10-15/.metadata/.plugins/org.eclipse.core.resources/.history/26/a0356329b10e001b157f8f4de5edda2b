<script>
	
	/*변수 선언*/
	function checkForm() {
		
		/* console.log(document.getElementsByName("userName")[0].value) */
		
		for (var i = 0; i < document.getElementsByName("joinForm").length; i++) {
			console.log(document.getElementsByName("joinForm")[i].value);
		}
		
		/*Name Check*/
		if (document.getElementsByName("joinForm")[0].value==""||document.getElementsByName("joinForm")[0].value==null) {
			$('#name_check').css('color','red').html("You have to insert your name.");
			document.getElementsByName("joinForm")[0].focus();
		}else if(!(document.getElementsByName("joinForm")[0].value==""||document.getElementsByName("joinForm")[0].value==null)){
			$('#name_check').css('color','green').html("Check it!.");
		}
		
		
		/*Id Check*/
		if (document.getElementsByName("joinForm")[1].value==""||document.getElementsByName("joinForm")[1].value==null) {
			$('#id_check').css('color','red').html("Please Insert Your Id.");
			document.getElementsByName("joinForm")[1].focus();
		}else if(!(document.getElementsByName("joinForm")[1].value==""||document.getElementsByName("joinForm")[1].value==null)) {
			$('#id_check').css('color','green').html("Check it!.");
		}
	}
</script>


<script>

	function CheckForm() {
		/*ID 유효성 검사*/
		if (document.getElementById("userID").value =="" || document.getElementById("userID").value ==null) {
			//alert("Please input id");
			//아이디 미입력 후 아이디칸에 focus
			document.getElementById("userID").focus();
			$('#id_Check').css('color','red').html("아이디를 입력하시오");
			
			return false;
		}else if (!(document.getElementById("userID").value =="" || document.getElementById("userID").value ==null)){
			$('#id_Check').css('color','green').html("아이디 입력 확인");
		}// The end of if
		
		/*PW 유효성 검사*/
		if (document.getElementById("userPW").value =="" || document.getElementById("userPW").value ==null) {
			//alert("Please input password");
			//아이디 미입력 후 아이디칸에 focus
			document.getElementById("userPW").focus();
			$('#pw_Check').css('color','red').html("비밀번호를 입력하시오");
			return false;
		}else if(!(document.getElementById("userPW").value =="" || document.getElementById("userPW").value ==null)) {
			$('#pw_Check').css('color','green').html("비밀번호 확인");
		}// The end of if
		
		/*Gender 성별 선택*/
		var rdo_gender = document.getElementsByName("gender");
		var select_rdo_gender = document.getElementsByName("gender").value;
		var count = 0;
		for(i = 0; i<rdo_gender.length; i++) {
			console.log(select_rdo_gender.length)
			if(rdo_gender[i].checked == true) {
				count +=1;				
			}
		}//The end of for
		$('#gender_Check').css('color','green').html(""+select_rdo_gender+"");
		
		console.log(count);
		
		/*PW 유효성 검사*/
		if (document.getElementsByName("job").selectedIndex == 0) {
			
			document.getElementsByName("job").focus();
			console.log("0번쨰 index 선택")
			return false;
		}// The end of if
	}// The end of Method
	
</script>

</head>
